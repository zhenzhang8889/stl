.container
  .row
    .span12
      %ul.breadcrumb
        %li
          %a{:href => "#"} My Network
          %span.divider /
        %li.active Interests
      / end .breadcrumb
    / .span12
  / end .row
  .row#add_interests
    .span6.push.offset3
      .well.center{:style => "min-height: 300px;"}
        %h2 Add interests to get recommendations
        - User::INTERESTS.each do |interest|
          %p{style: "float:left; height:50px; width: 130px;"}= link_to interest, add_interest_user_path(@user, user: { interest: interest } ), remote: true, method: :put, class: "btn", id: "i_#{User::INTERESTS.index(interest)}"
      / end .hero-unit
  / end .row
  .row
    .span12
      = link_to previous_wizard_path, class: "btn pull-left" do
        %i.icon-circle-arrow-left
        Previous
      = link_to next_wizard_path, class: "btn pull-right" do
        Next
        %i.icon-circle-arrow-right
    / end span12
  / end .row
/ end .container