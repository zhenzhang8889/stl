- if comment
  %li.comment
    .user_avatar
      = link_to comment.user do
        = profile_image_for(comment.user, 34)
    .comment_body
      = link_to comment.user.name, comment.user, title: comment.user.name
      %p= comment.content
      .time_stamp
        = time_ago_in_words(comment.created_at)
        ago
      %span{class: "like_comment_item_#{comment.id}"}
        = link_to_like_comment(comment)
  / // end .comment