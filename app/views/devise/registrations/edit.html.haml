.row-fluid
  .span8
    .well
      %h3 Edit Settings
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, multipart: true }, remote: true) do |f|
        = f.error_notification
        = hidden_field :user_settings, true
        .form-inputs
          = f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: { class: "input-block-level" }
          = f.input :username, :required => true, label: false, placeholder: "Username", input_html: { class: "input-block-level" }
          - if f.object.encrypted_password.present?
            = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, label: false, placeholder: "Password", input_html: { class: "input-block-level" }
            = f.input :password_confirmation, :required => false, label: false, placeholder: "Password Confirmation", input_html: { class: "input-block-level" }
        .form-actions
          = f.button :submit, "Update"
      %h3 Connect Your Accounts
      %p.social
        = link_to_authorize_social(:twitter, :from => :account)
        = link_to_authorize_social(:facebook, :from => :account)
        = link_to_authorize_social(:linkedin, :from => :account)
        = link_to_authorize_social(:google_oauth2, :from => :account)

      %h3 Cancel my account
      %p
        Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.
      = link_to "Back", :back
  .span4
    .well{:style => "min-height: 800px;"}
