= simple_form_for(resource, as: :user, url: session_path(:user), remote: true) do |f|
  %legend Sign in
  %p Login using a social network
  %ul.social_login
    %li
      = link_to_authorize_social(:facebook, :from => :signin)
    %li
      = link_to_authorize_social(:twitter, :from => :signin)
    %li
      = link_to_authorize_social(:google_oauth2, :from => :signin)
    %li
      = link_to_authorize_social(:linkedin, :from => :signin)
  %hr
  %p or login with your account information
  .errors
  = f.input :login, label: false, placeholder: "Email or Username", autofocus: true
  = f.input :password, required: false, label: false, placeholder: "Password"

  %p
    = link_to "Forgot your password?", new_password_path(:user)

  = f.submit "Login", class: "btn btn-warning new_session_submit"
  %br
  %br
  %hr
  %p
    By signing in, I agree to the
    %a{ href: "#"} Therms of service
    and
    %a{ href: "#"} Privacy Policy
    \.