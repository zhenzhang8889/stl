%h1 Listing goals
%table.table
  %tr
    %th Goal
    %th
    %ht
  - @goals.each do |goal|
    %tr
      %td= goal.name
      %td= link_to 'Show', goal
      %td= link_to 'Edit', edit_goal_path(goal)
