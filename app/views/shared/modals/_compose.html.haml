%form{:action => '/messages/compose', :method => 'get', :id => 'composes_frm' }
  #compose_in_modal.modal.hide.stl_modal 
    .modal-body
      %input{:type => 'text', :placeholder => 'Username', :name => 'recipients'}
      %br
      %textarea{ :rows => '5', :cols => '60', :name => 'body', :placeholder => 'Message'}
      .errors
    .modal-footer
      %input{:type => 'submit', :class => 'btn btn-primary', :value => 'Send'}

#msg_success_in_modal.modal.hide.stl_modal.fade
  .modal-body
    Your compose just sent!
     