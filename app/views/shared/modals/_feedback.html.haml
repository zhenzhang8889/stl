%form{:action => '/feedback/send_msg', :method => 'get', :id => 'feedback_frm' }  
  #feedback_in_modal.modal.hide.stl_modal
    .modal-header
      %p 
        %b Please give feedback on our site!
    .modal-body
      - if current_user
        %input{:type => 'hidden', :name => 'from', :placeholder => 'Email', :value => current_user.email }
        %br
        %input{:type => 'hidden', :name => 'name', :placeholder => 'Name', :value => current_user.name }
      - else     
        %input{:type => 'text', :name => 'from', :placeholder => 'Email'}
        %br
        %input{:type => 'text', :name => 'name', :placeholder => 'Name'}
      
      
      %textarea{ :rows => '5', :cols => '30', :name => 'contents', :placeholder => 'Comments, Suggestions, Questions, etc'}
      .errors
    .modal-footer
      %input{:type => 'submit', :class => 'btn btn-primary', :value => 'Send'}

#success_in_modal.modal.hide.stl_modal.fade
  .modal-body
    Your feedback just sent!
