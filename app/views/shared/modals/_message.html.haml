%form{:action => '/messages/send_to', :method => 'get', :id => 'messages_frm' }
  #message_in_modal.modal.hide.stl_modal 
    .modal-body    
      %input{:type => 'hidden', :name => 'recipients',:value => @user.id }
      %br
      %input{:type => 'hidden', :name => 'subject', :placeholder => 'Name', :value => @user.name }
      
      %textarea{ :rows => '5', :cols => '30', :name => 'body', :placeholder => 'Send any message'}
      .errors
    .modal-footer
      %input{:type => 'submit', :class => 'btn btn-primary', :value => 'Send'}
 