        .modal-footer
          %a.pull-left{:href => "#"} Some other time
    / end .row
    #marketing.row
      .span4
        %section.meet_fitness_expert
          %h1 Meet Experts
          %p.lead Find people with experience to get help on your goals.
        / end .meet_fitness_expert
